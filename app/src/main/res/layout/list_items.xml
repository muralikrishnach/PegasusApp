<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4dp"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:padding="@dimen/_4dp"
        card_view:cardCornerRadius="12dp"
        app:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.9">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvwaybillno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_4dp"
                    android:paddingEnd="@dimen/_4dp"
                    android:paddingTop="@dimen/_4dp"
                    android:paddingBottom="@dimen/_4dp"
                    android:textColor="@color/darkgrey"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="@dimen/activity_headsize" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/tvsrcdest"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingStart="@dimen/_4dp"
                      android:paddingEnd="@dimen/_4dp"
                      android:paddingTop="@dimen/_4dp"
                      android:paddingBottom="@dimen/_4dp"
                      android:textSize="@dimen/activity_textsize"
                      style="@style/TextAppearance.AppCompat.Title"/>

                  <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/to"
                      android:layout_width="20dp"
                      android:layout_height="wrap_content"
                      android:text="@string/to"
                      android:textColor="@color/red"
                      android:textSize="@dimen/activity_textsize"
                      style="@style/TextAppearance.AppCompat.Title"
                      android:textStyle="bold"/>

                  <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/tvdest"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingStart="@dimen/_4dp"
                      android:paddingEnd="@dimen/_4dp"
                      android:paddingTop="@dimen/_4dp"
                      android:paddingBottom="@dimen/_4dp"
                      android:textSize="@dimen/activity_textsize"
                      style="@style/TextAppearance.AppCompat.Title"/>


              </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_4dp"
                    android:paddingEnd="@dimen/_4dp"
                    android:paddingTop="@dimen/_4dp"
                    android:paddingBottom="@dimen/_4dp"
                    android:textColor="@color/cerulean"
                    android:textSize="12sp"
                    style="@style/TextAppearance.AppCompat.Display3"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:visibility="gone"
                android:id="@+id/btndocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/document"
                android:backgroundTint="@color/whitee"
                android:layout_gravity="center" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:backgroundTint="@color/whitee"
                android:layout_gravity="center">

            </androidx.appcompat.widget.AppCompatImageButton>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>